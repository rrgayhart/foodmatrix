<p>
  <strong>Title:</strong>
  <%= @protein.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @protein.text %>
</p>

<h2>Preparation Recipes:</h2>
<%= render @protein.preps %>

<h2>Add a preparation style:</h2>
<%= form_for([@protein, @protein.preps.build]) do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Edit Protein', edit_protein_path(@protein) %> |
<%= link_to 'Back to Proteins', proteins_path %>