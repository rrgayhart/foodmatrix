<h1>Listing Vegetables</h1>
 
<table class="food_index">
  <tr class="food_index_tr">
    <th >Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @vegetables.each do |vegetable| %>
  <tr>
    <td><%= link_to vegetable.name, vegetable_path(vegetable) %></td>
    <td class="text"><%= vegetable.body %></td>
    <td><%= link_to 'Show', vegetable_path(vegetable) %></td>
    <td><%= link_to 'Edit', edit_vegetable_path(vegetable) %></td>
    <td><%= link_to 'Delete', vegetable_path(vegetable), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= link_to 'New Vegetable', new_vegetable_path %>
