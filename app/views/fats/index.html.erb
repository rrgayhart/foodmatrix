<h1>Listing fats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @fats.each do |fat| %>
      <tr>
        <td><%= fat.name %></td>
        <td class="text"><%= fat.body %></td>
        <td><%= link_to 'Show', fat %></td>
        <td><%= link_to 'Edit', edit_fat_path(fat) %></td>
        <td><%= link_to 'Destroy', fat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

