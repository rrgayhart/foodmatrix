<% @spices.each do |spice| %>
  <tr>
    <td><%= link_to spice.name, spice_path(spice) %></td>
    <td class="text"><%= spice.name %></td>
    <td><%= link_to 'Show', spice_path(spice) %></td>
    <td><%= link_to 'Edit', edit_spice_path(spice) %></td>
    <td><%= link_to 'Delete', spice_path(spice), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
