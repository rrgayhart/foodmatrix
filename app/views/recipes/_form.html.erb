<%= form_for(@recipe) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :time %><br>
    (in minutes) <br />
    <%= f.number_field :time %>
  </div>
  <div class="field">
    <%= f.label :vegetable %><br>
    <%= f.text_field :vegetable %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
